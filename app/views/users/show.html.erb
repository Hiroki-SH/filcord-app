<% provide(:title, "フィルム一覧") %>

<div class="container">
  <div class="info-wrapper">
    <div class="info">
      <p><%= current_user.name %></p>
      <p><%= current_user.email %></p>
      <%= link_to "編集", edit_user_path, class: "btn btn-user-edit" %>
    </div>
    <%= link_to "フィルムを登録する", new_film_path, class: "btn" %>
  </div>

  <div class="index-wrapper">
    <% if current_user.films.any? %>
      <h3>フィルム一覧</h3>
      <ol>
        <%= render @films %>
      </ol>
      <div class="bootstrap">
        <%= will_paginate @films %>
      </div>
    <% end %>
  </div>
</div>
