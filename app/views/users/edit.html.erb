<h1>user edit</h1>

<%= form_with(url: user_path, method: :patch, scope: :user, local: true) do |f| %>
  <%= f.label :name, "アカウント名" %>
  <%= f.text_field :name %>

  <%= f.label :email, "Emailアドレス" %>
  <%=  f.email_field :email %>

  <%= f.label :password, "パスワード" %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "パスワード(確認)" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "ユーザーを編集" %>
<% end %>