<ul>
  <li><%= @photo.f_number %></li>
  <li><%= @photo.shutter_speed %></li>
  <%= link_to "編集する", edit_photo_path(@photo) %>
  <%= link_to("削除する", @photo, method: :delete, data: { confirm: "本当に消しますか？"}) %>
</ul>

<% unless @photo.lat.nil? then %> 
  <div hidden id="lat"><%= @photo.lat %></div>
  <div hidden id="lng"><%= @photo.lng %></div>
  <div id="map"></div>
<% end %>

<script src=<%= "http://maps.google.com/maps/api/js?key=#{ENV['GOOGLE_MAP_API_KEY']}&language=ja" %>></script>
<%= javascript_pack_tag 'photo_map' %>
