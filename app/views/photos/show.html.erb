<% provide(:title, "記録詳細 #{@photo.id}") %>

<div class="page-title">
  <h1>撮影記録</h1>
</div>

<div class="container">
  <div class="photo-left">
    <div class="info">
      <p>F値：<%= @photo.f_number %></p>
      <p>シャッタースピード：<%= @photo.shutter_speed %></p>
    </div>
      <%= link_to "編集する", edit_photo_path(@photo), class: "btn btn-left" %>
      <%= link_to "削除する", @photo, { method: :delete, data: { confirm: "本当に消しますか？"}, class: "btn btn-right" } %>
  </div>

  <% unless @photo.lat.empty? then %> 
    <div hidden id="lat"><%= @photo.lat %></div>
    <div hidden id="lng"><%= @photo.lng %></div>
    <div class="photo-right">
      <div id="map"></div>
    </div>
  <% end %>
</div>

<script src=<%= "https://maps.google.com/maps/api/js?key=#{ENV['GOOGLE_MAP_API_KEY']}&language=ja" %>></script>
<%= javascript_pack_tag 'photo_map' %>
