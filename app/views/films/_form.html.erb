<%= form_with(model: @film, local: true) do |f| %>
  <%= f.label :name, "フィルム名" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :company, "フィルムメーカー" %>
  <%=  f.text_field :company, class: "form-control" %>

  <%= f.label :iso, "感度 ISO/ASA" %>
  <%= f.text_field :iso, class: "form-control"%>

  <%= f.submit yield(:button_text), class: "btn" %>
<% end %>