<ul>
  <li><%= @film.name %></li>
  <li><%= @film.company %></li>
  <li><%= @film.iso %></li>
  <li><%= @film.created_at %></li>
  <li><%= link_to("編集する", edit_film_path(@film)) %></li>
  <li><%= link_to("削除する", @film, method: :delete, data: { confirm: "本当に消しますか？"}) %></li>

  <% if @film.photos.any? %>
    <h3>撮影記録</h3>
    <ol>
      <%= render @photos %>
    </ol>
    <%= will_paginate @photos %>
  <% end %>

</ul>



<%= form_with(model: @photo, local: true) do |f| %>
  <%= hidden_field_tag(:film_id, @film.id) %><!-- film.idを渡す -->
  <%= f.hidden_field(:lat) %><!-- JavaScriptで取得した緯度を渡す -->
  <%= f.hidden_field(:lng) %><!-- JavaScriptで取得した経度を渡す -->

  <%= f.label :f_number, "F値" %>
  <%= f.text_field :f_number %>

  <%= f.label :shutter_speed, "シャッタースピード" %>
  <%=  f.text_field :shutter_speed %>

  <%= f.submit "撮影記録を登録" %>
<% end %>

<div id="text-button"><p id="text">位置情報を取得する</p></div>
<div id="map"></div>

<script src=<%= "https://maps.google.com/maps/api/js?key=#{ENV['GOOGLE_MAP_API_KEY']}&language=ja" %>></script>
<%= javascript_pack_tag 'location' %>
